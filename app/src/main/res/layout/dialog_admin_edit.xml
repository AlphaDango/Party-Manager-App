<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/standort_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/partyname"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="Partyname:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_party" />

    <View
        android:id="@+id/divider2"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/edit_party"
        app:layout_constraintTop_toBottomOf="@+id/standort_party" />

    <EditText
        android:id="@+id/edit_party"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/partyname"
        app:layout_constraintTop_toBottomOf="@+id/standort_party" />

    <TextView
        android:id="@+id/date_party"
        android:layout_width="34dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="am:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partyname" />

    <TextView
        android:id="@+id/time_party"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="um:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_party" />

    <TextView
        android:id="@+id/select_date"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/edit_party"
        app:layout_constraintTop_toBottomOf="@+id/partyname" />

    <TextView
        android:id="@+id/select_time"
        android:layout_width="70dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/edit_party"
        app:layout_constraintTop_toBottomOf="@+id/date_party" />

    <Button
        android:id="@+id/btn_date"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Datum"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/select_date"
        app:layout_constraintTop_toBottomOf="@+id/partyname" />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Uhrzeit"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/select_time"
        app:layout_constraintTop_toBottomOf="@+id/date_party" />

    <Button
        android:id="@+id/create_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Speichern"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/select_time"
        app:layout_constraintTop_toBottomOf="@+id/btn_time" />

</android.support.constraint.ConstraintLayout>